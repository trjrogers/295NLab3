@*@model Comment*@
@model String
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Comment on story</title>
</head>
<body>
    <div>
        <h1>Comment on this story</h1>
        <ul>
            <li><h1><a href="/">Home</a></h1></li>
            <li><h1><a href="../Sources/Index">Sources</a></h1></li>
        </ul>

        @*
            Trying to provide the commented-on-story's title to the view, which is happening, but when I pass the 
            title back to the controller, the title is 'null'
        *@
        <form asp-action="CommentForm" method="post">
            <label name="@Model">Story title:</label>
            <input name="storyTitle" value="@Model"/>
            <div>
                <label name="username">Username:</label>
                <input name="username" />
            </div>
            <div>
                <label name="email">Your email:</label>
                <input name="email" />
            </div>
            <div>
                <label name="CommentText">Comment:</label>
                <input name="CommentText" />
            </div>
            <div>
                <button type="submit">Submit Comment</button>
            </div>
        </form>
        <h3>
            <a href="../Home/History">History</a>
        </h3>
        <h3>
            <a href="../Home/Stories">Stories</a>
        </h3>
    </div>
</body>
</html>
